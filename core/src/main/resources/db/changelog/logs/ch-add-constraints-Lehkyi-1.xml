<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Update constraints for 'verify_emails' table -->
    <changeSet author="Mykola Lehkyi"
               id="22.09.20.Lehkyi-1">
        <dropForeignKeyConstraint baseTableName="verify_emails"
                                  constraintName="user_should_verify_email" />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="verify_emails"
                                 constraintName="user_should_verify_email"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <!-- Update constraints for 'own_security' table -->
    <changeSet author="Mykola Lehkyi"
               id="22.09.20.Lehkyi-2">
        <dropForeignKeyConstraint baseTableName="own_security"
                                  constraintName="password_exists_with_user" />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="own_security"
                                 constraintName="password_exists_with_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
</databaseChangeLog>
